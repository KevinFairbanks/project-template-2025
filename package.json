{
  "name": "project-template",
  "version": "1.0.0",
  "description": "A standardized project template for web development",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run build:clean && npm run build:app",
    "build:app": "echo 'Add your build command here'",
    "build:clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "docker:build": "docker build -t project-template .",
    "docker:run": "docker run -p 3000:3000 project-template",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "prepare": "husky install",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "standard-version"
  },
  "keywords": [
    "template",
    "web-development",
    "nodejs",
    "docker",
    "starter"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.5",
    "jest": "^30.0.2",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "conventional-changelog-cli": "^5.0.0",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/project-template.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/project-template/issues"
  },
  "homepage": "https://github.com/your-username/project-template#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js"
    ]
  }
} 